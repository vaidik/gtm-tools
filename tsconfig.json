{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es2020",
    "lib": [
      "es2020"
    ],
    "module": "ES2020",
    "moduleResolution": "Node",
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
